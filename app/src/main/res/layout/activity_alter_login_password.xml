<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_view_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_view"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/top_bar_bg_color"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/top_bar_bg_color">

        <ImageButton
            android:id="@+id/ib_alter_login_password_back"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector_bg"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改登录密码"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_reg_lock"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/et_alp_old_p"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@null"
                android:hint="原始登录密码"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#cccccc"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cccccc"/>

            <ImageButton
                android:id="@+id/ib_alp_old_p_clear"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/login_et_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btn_alp_forget"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="忘记密码?"
            android:textColor="#1d92dc"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_reg_u"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/et_alp_new_p"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@null"
                android:hint="新登录密码(6-16位数字、字母)"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#cccccc"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cccccc"/>

            <ImageButton
                android:id="@+id/ib_alp_new_p_clear"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/login_et_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_reg_p"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp">

            <EditText
                android:id="@+id/et_alp_new_p_affirm"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@null"
                android:hint="确认登录密码"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#cccccc"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cccccc"/>

            <ImageButton
                android:id="@+id/ib_alp_new_p_aff_clear"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/login_et_clear"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_alp_affirm"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/home_btn_selector_noclick"
        android:text="确认提交"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

</LinearLayout>