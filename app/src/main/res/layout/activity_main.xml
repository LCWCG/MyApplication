<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_view_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="visible">

                <com.lcw.myapplication.view.GuideGallery
                    android:id="@+id/gg_home_guidegallery"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/transparent0"
                    android:fadingEdgeLength="0.0dp"
                    android:spacing="1.0px"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/transparent0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/ll_home_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_home_12month"
                            android:layout_width="71dp"
                            android:layout_height="45dp"
                            android:background="@drawable/home_tab_selector_l"
                            android:text="12个月"
                            android:textColor="@color/home_font_selector"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/btn_home_12month_up"
                            android:layout_width="71dp"
                            android:layout_height="45dp"
                            android:background="@drawable/home_tab_selector_l_p"
                            android:text="12个月"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_home_6month"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_center"
                            android:text="6个月"
                            android:textColor="@color/home_font_selector"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/btn_home_6month_up"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_center_p"
                            android:text="6个月"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_home_3month"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_center"
                            android:text="3个月"
                            android:textColor="@color/home_font_selector"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/btn_home_3month_up"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_center_p"
                            android:text="3个月"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_home_1month"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_r"
                            android:text="1个月"
                            android:textColor="@color/home_font_selector"
                            android:textSize="16sp"/>

                        <Button
                            android:id="@+id/btn_home_1month_up"
                            android:layout_width="72dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="-1dp"
                            android:background="@drawable/home_tab_selector_r_p"
                            android:text="1个月"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <com.lcw.myapplication.view.DonutProgress
                    android:id="@+id/dp_home_donutprogress"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    custom:donut_background_color="#fe5451"
                    custom:donut_finished_color="#8bd3d3"
                    custom:donut_finished_stroke_width="6dp"
                    custom:donut_progress="0"
                    custom:donut_text_color="#FFFFFF"
                    custom:donut_text_size="30dp"
                    custom:donut_unfinished_color="#00000000"
                    custom:donut_unfinished_stroke_width="6dp"/>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年化收益"
                        android:textColor="#fedad8"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_home_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00.00"
                            android:textColor="#FFFFFF"
                            android:textSize="42sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/home_ic_hiddenline"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text="100%本息保障"
                        android:textColor="#fdbdbb"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_marginTop="5dip"
                        android:src="@drawable/home_ic_shield"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/home_ic_describe"/>

            <Button
                android:id="@+id/btn_home_investment"
                android:layout_width="300dip"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/home_btn_selector"
                android:text="立即投资"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/test_exitlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登陆"/>

                <Button
                    android:id="@+id/test_yinhangka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的银行卡"/>

                <Button
                    android:id="@+id/test_gaimima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>